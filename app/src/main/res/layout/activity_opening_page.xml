<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpeningPage">

    <Button
        android:id="@+id/opening_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opening_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="login"
        android:text="@string/opening_login" />

    <Button
        android:id="@+id/opening_google_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opening_create_account_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="login"
        android:text="@string/opening_google_login" />

    <ImageView
        android:id="@+id/opening_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opening_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/opening_create_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/opening_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/opening_create_account" />

    <TextView
        android:id="@+id/opening_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/opening_title" />

</RelativeLayout>